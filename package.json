{
  "name": "chatgpt-and-grok",
  "displayName": "ChatGPT and Grok",
  "description": "A VSCode plugin to integrate ChatGPT and Grok directly in your editor.",
  "version": "1.1.0",
  "publisher": "chenyunliang",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onCommand:extension.openChatGptAndGrok",
    "onCommand:extension.configureApiKey"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.openChatGptAndGrok",
        "title": "Open ChatGPT and Grok",
        "category": "ChatGPT and Grok"
      },
      {
        "command": "extension.configureApiKey",
        "title": "Configure API Key",
        "category": "ChatGPT and Grok"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "chatgptAndGrok.chatGPTUrl": {
          "type": "string",
          "default": "https://chat.openai.com",
          "description": "The URL of ChatGPT."
        },
        "chatgptAndGrok.grokUrl": {
          "type": "string",
          "default": "https://grok.com",
          "description": "The URL of Grok."
        },
        "chatgptAndGrok.apiKey": {
          "type": "string",
          "default": "",
          "description": "The API key for authentication (if required)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --config webpack.config.js",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "ts-loader": "^9.5.4",
    "typescript": "^4.9.5",
    "vscode": "^1.1.37",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "vscode-uri": "^3.0.0"
  }
}
